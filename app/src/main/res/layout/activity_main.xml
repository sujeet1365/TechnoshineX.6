<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.viking.tsx6.MainActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <com.github.florent37.materialviewpager.MaterialViewPager
            android:id="@+id/materialViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            app:viewpager_animatedHeaderImage="true"
            app:viewpager_color="@color/colorPrimary"
            app:viewpager_disableToolbar="false"
            app:viewpager_displayToolbarWhenSwipe="true"
            app:viewpager_enableToolbarElevation="true"
            app:viewpager_headerAdditionalHeight="20dp"
            app:viewpager_headerAlpha="1.0"
            app:viewpager_headerHeight="200dp"
            app:viewpager_hideLogoWithFade="true"
            app:viewpager_hideToolbarAndTitle="false"
            app:viewpager_logo="@layout/header_logo"
            app:viewpager_logoMarginTop="70dp"
           app:viewpager_pagerTitleStrip="@layout/my_tab"
            app:viewpager_parallaxHeaderFactor="1.5"
            app:viewpager_transparentToolbar="false"

            />
        <!--app:viewpager_pagerTitleStrip="@layout/my_tab"-->

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/fab_margin"
            android:padding="0dp"
            android:scaleType="center"
            android:src="@mipmap/fingerprint_icon"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:text=""
        android:textColor="#ffffff" />
</RelativeLayout>
