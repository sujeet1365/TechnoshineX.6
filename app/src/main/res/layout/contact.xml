<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="40dp"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/internet"/>
        <TextView
            android:id="@+id/web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:autoLink="all"
            android:clickable="true"
            android:onClick="chrome"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:text="www.cadnitd.co.in"
            android:drawablePadding="10dp"
            android:textColorLink="@color/colorPrimaryDark"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/mail"/>
            <TextView
                android:id="@+id/mail"
                android:textColorLink="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:onClick="mail"
                android:gravity="center|bottom"
                android:text="technoshine.ca@gmail.com"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/twitter"/>
            <TextView
                android:id="@+id/twitter"
                android:textColorLink="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:onClick="mail"
                android:gravity="center|bottom"
                android:text="twitter.com/technoshinex6"
                android:layout_marginLeft="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:src="@drawable/fb"/>
        <TextView
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:autoLink="all"
            android:clickable="true"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:text="facebook.com/technoshinex.6"
            android:drawablePadding="10dp"
            android:textColorLink="@color/colorPrimaryDark"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/call"/>
            <TextView
                android:id="@+id/cnt"
                android:textColorLink="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:drawablePadding="5dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:gravity="center|bottom"
                android:text="9834015103"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:src="@drawable/you"/>
            <TextView
                android:id="@+id/ytube"
                android:textColorLink="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:drawablePadding="5dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textStyle=""
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:onClick="youtube"
                android:gravity="center|bottom"
                android:text="@string/youtube"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>


