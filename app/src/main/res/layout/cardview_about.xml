<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_about"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:clickable="false"
    app:cardBackgroundColor="#ffe66d"
    app:cardElevation="0dp"
    app:contentPadding="0dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:onClick="schedule"
            android:gravity="center|left"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#f40505"
            android:id="@+id/downloadSchedule"
            android:text="\t\t\tClick for Schedule"
            android:paddingTop="35dp"
            android:paddingLeft="30dp"
            android:drawableLeft="@mipmap/ic_schdule"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="30dp"
            android:textColor="#f40505"
            android:id="@+id/date_title"
            android:textStyle="bold"
            android:gravity="left|center"
            android:text="\tWhen???"
            android:drawableLeft="@mipmap/ic_date_range"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textColor="#050df4"
            android:id="@+id/date"
            android:textStyle="bold"
            android:gravity="left|center"
            android:text="\t23-25 Sept, 2016"/>
            </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:textSize="16sp"
            android:id="@+id/place_title"
            android:textColor="#f40905"
            android:textStyle="bold"
            android:paddingLeft="30dp"
            android:text="\tWhere???"
            android:drawableLeft="@mipmap/ic_place"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:textSize="16sp"
                android:id="@+id/place"
                android:textColor="#050df4"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:text="\tCA Department"
                />
        </LinearLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#e64712" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#0a0a0a"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="What???"
            />

    <TextView
        android:id="@+id/about"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/about"
        android:textStyle="normal"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingBottom="45dp"
        android:paddingTop="20dp"
        android:paddingStart="45dp"
        android:paddingEnd="45dp"
        android:gravity="left"
        android:textColor="@color/text_color"
        android:textAlignment="gravity"
        android:textSize="14sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>